<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.clarkapp.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_eventsFragment"
            app:destination="@id/eventsFragment" />
        <action
            android:id="@+id/action_menuFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_menuFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_menuFragment_to_recyclerFragment"
            app:destination="@id/recyclerFragment" />
        <action
            android:id="@+id/action_menuFragment_to_hoursFragment"
            app:destination="@id/hoursFragment" />
        <action
            android:id="@+id/action_menuFragment_to_coursesFragment"
            app:destination="@id/coursesFragment" />
        <action
            android:id="@+id/action_menuFragment_to_feedbackFragment"
            app:destination="@+id/feedbackFragment" />
        <action
            android:id="@+id/action_menuFragment_to_safetyFragment"
            app:destination="@id/safetyFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.clarkapp.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events" >
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.clarkapp.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.clarkapp.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/recyclerFragment"
        android:name="com.example.clarkapp.RecyclerViewFragment"
        android:label="fragment_resources"
        tools:layout="@layout/fragment_recycler" />
    <fragment
        android:id="@+id/hoursFragment"
        android:name="com.example.clarkapp.AthleticsFragment"
        android:label="fragment_hours"
        tools:layout="@layout/fragment_athletics" />
    <fragment
        android:id="@+id/coursesFragment"
        android:name="com.example.clarkapp.CoursesFragment"
        android:label="fragment_courses"
        tools:layout="@layout/fragment_courses" />
    <fragment
        android:id="@+id/safetyFragment"
        android:name="com.example.clarkapp.SafetyFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_safety" />
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.example.clarkapp.FeedbackFragment"
        android:label="fragment_feedback"
        tools:layout="@layout/fragment_feedback" >
        <action
            android:id="@+id/action_feedbackFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>